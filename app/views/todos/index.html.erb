<h1>Listing Todos</h1>
 <%= link_to 'New todo', new_todo_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3">Show/Edit/Delete</th>
  </tr>
 
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.text %></td>
      <td><%= link_to 'Show', todo_path(todo), class:'shower' %></td>
      <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
      <td><%= link_to 'Destroy', todo_path(todo),
              method: :delete,
              data: { confirm: 'Are you really sure?' } %></td>
    </tr>
  <% end %>
</table>